@model ControlMigracion.Models.Viaje

@{
    ViewData["Title"] = "Eliminar Viaje";
}

<h1>Eliminar Viaje</h1>

<h3>¿Está seguro de que desea eliminar este viaje?</h3>
<div>
    <h4>Viaje</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Viajero)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Viajero.Nombre)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.FechaInicio)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.FechaInicio)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.FechaFin)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.FechaFin)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Destino)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Destino)
        </dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="ViajeID" />
        <input type="submit" value="Eliminar" class="btn btn-danger" /> |
        <a asp-action="Index" class="btn btn-secondary">Volver a la lista</a>
    </form>
</div>

